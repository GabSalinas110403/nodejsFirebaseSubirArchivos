<%- include ("../templates/encabezado")%>
<%- include ("../templates/menu")%>
<div class="container mt-5">
<form action="/editarProd" method="post" enctype="multipart/form-data">
    <div class="card">
        <div class="card-header">
            <h1>Modificar usuario</h1>
        </div>
        <div class="card-body">
            <input type="hidden" name="id" value="<%= product.id%>">
            <input class="form-control mb-3" type="text" value="<%= product.nombre%>" name="nombre" id="nombre" placeholder="Nombre" autofocus>
            <input class="form-control mb-3" type="text" value="<%= product.descripcion%>" name="descripcion" id="descripcion" placeholder="Descripcion">
            <input class="form-control mb-3" type="text" value="<%= product.precio%>" name="precio" id="precio" placeholder="Precio">
            <input class="form-control mb-3" type="file" value="<%= product.fotoProd%>" name="fotoProd" id="fotoProd" placeholder="FotoProd">
        </div>
        <div class="card-footer">
            <button type="submit" class="form-control btn btn-primary" > Modificar producto</button>
        </div>
    </div>
</form>
</div>
<%- include ("../templates/pie")%>